.header
  position relative
  background lime
  height 110%
  background rgb(34,255,128)
  background linear-gradient(53deg, $color-secondary 0%, rgba(63,176,117,1) 100%)
  overflow hidden

  +below('phone')
    height 95%

  &:before
    content ''
    position absolute
    width 100%
    left 0
    right 0
    top 0
    bottom 0
    z-index 1
    bg('svg', 'header-lines.svg')

  &:after
    content ''
    position absolute
    width 100%
    height 15em
    left 0
    right 0
    bottom 0
    z-index 1
    bg('svg', 'header-wave.svg')
    background-size 102% auto
    background-position bottom center

  &-wrapper
    wrapper()
    position relative
    z-index 1
    height 100%

  &-top
    padding 4em 0 0
    display flex

    &-column
      flex 1
      display flex
      align-items center

      &.menu
        justify-content flex-end

  &-logo
    margin 0
    padding 0

    &-link
      display block
      width 180px
      height 45px
      text-decoration none
      bg('svg', 'logo-white.svg')
      background-size 99% auto
      text-indent -9999em
      background-position left center
      pointer-events none

      +below('phone')
        width 220px
        height 60px

  &-menu
    display flex
    list-reset()

    li
      margin 0 .2em

      a:not(.login)
        +below('tablet')
          display none

      a
        position relative
        display inline-block
        padding 1em 2em
        font-size 1.4rem
        color #fff
        text-decoration none
        text-transform uppercase
        border-radius $radius-size
        font-weight bold

        &:hover
          &:after
            opacity 1

        &:after
          $size = 5px
          content ''
          position absolute
          display block
          width $size
          height $size
          border-radius 50%
          background #fff
          bottom 2px
          opacity 0
          left 50%
          margin-left -($size / 2)
          transition(opacity, .7s)

        &.login
          background #fff
          color $color-text
          padding 1em 3em
          transition(box-shadow)

          &:hover
            box-shadow 0 0 30px rgba($color-text, .2)

          &:after
            display none

  &-content
    height 80%
    display flex

    +below('phone')
      height 65%

    &-column
      flex-basis 50%
      display flex
      align-items center

      +below('phone')
        flex-basis 0
        flex 1

  &-feature
    padding-right 10em
    animate()

    +below('phone')
      padding-right 0

    &__title
      font-size 4.2rem
      color $color-text
      line-height 1.4
      margin 0
      padding 0

      +below('phone')
        font-size 3.2rem
        line-height 1.6

    &__description
      font-size 1.6rem
      color $color-text
      line-height 1.8
      margin 1em 0 0 0
      padding 0
      max-width 60%

      +below('phone')
        max-width 90%

    &__cta
      @extends $button
      margin-top 2em

    &__image
      position absolute
      left 50%
      bottom 0
      max-width 1000px
      border-radius 5px
      box-shadow 0 0 40px rgba(#000, .1)
      animate-image()

      +below('phone')
        display none

.features
  position relative
  padding 20em 0 40em

  +below('phone')
    padding 10em 0

  &:after
    content ''
    position absolute
    width 100%
    height 20em
    left 0
    right 0
    bottom 0
    z-index 1
    bg('svg', 'header-wave-grey.svg')
    background-size 102% auto
    background-position bottom center

  &-wrapper
    wrapper()

  &-list
    display flex
    width 100%
    list-reset()

    +below('phone')
      display block

    &.to-anim.animated
      .features-item
        animate-multi(3)

  &-item
    flex 1
    text-align center
    padding 0 2em

    +below('phone')
      margin-bottom 5em

    &__icon
      display block
      position relative
      width 80px
      height @width
      margin 1em auto 4em
      background-position center center
      background-size 100% auto

      &:before
        content ''
        position absolute
        display block
        width 90px
        height 110px
        top -1em
        left 50%
        margin-left -(@width / 2)
        bg('svg', 'feat-icon-bg.svg')
        background-size 100%
        opacity .7

      &.churn
        bg('svg', 'feat-icon_churn.svg')

      &.setup
        bg('svg', 'feat-icon_setup.svg')

      &.caos
        bg('svg', 'feat-icon_caos.svg')

    &__title
      font-size 2.6rem
      color $color-text
      padding .3em 0
      margin 0
      font-weight bold
      line-height 1.6

    &__description
      margin 0
      color $color-paragraph
      font-size 1.6rem
      line-height 1.8

.app
  background #f5f5f5
  padding 1em 0 5em

  &-wrapper
    wrapper()

  &-list
    list-reset()

  &-item
    padding 18em 0
    display flex

    +below('phone')
      display block
      padding 10em 0

    &.reverse
      flex-direction row-reverse

      .graphic:before
        left 0

    &-column
      flex 1
      display flex
      align-items center

      &.content
        flex 0
        flex-basis 40%
        padding-right 5em

      &.graphic
        position relative
        display flex
        align-items center
        justify-content center

        &:before
          content ''
          position absolute
          left -4em
          top -10em
          bottom @top
          width 100%
          bg('svg', 'bg-app-item.svg')
          background-size 100% 100%
          opacity .9

          +below('phone')
            left 0

        img
          width 80%
          z-index 2

          +below('tablet')
            width 100%

          +below('phone')
            margin-bottom 5em

    &__header
      display block
      font-size 1.4rem
      color $color-primary
      font-weight bold
      margin 0
      padding .5em 0
      text-transform uppercase

    &__title
      font-size 3rem
      color $color-text
      font-weight bold
      margin 0
      line-height 1.3

    &__description
      font-size 1.5rem
      color $color-paragraph
      padding .8em 0
      margin 0
      line-height 1.8
      max-width 350px

.footer
  position relative
  padding 10em 0 5em
  background rgb(34,255,128)
  background linear-gradient(53deg, $color-text 0%, ($color-text - 30%) 100%)
  overflow hidden

  &:before
    content ''
    position absolute
    width 90em
    height @width
    left -20em
    right 0
    top -50em
    z-index 1
    background lime
    border-radius 50%
    background #999
    opacity .03

    +below('phone')
      display none

  &:after
    content ''
    position absolute
    width 100%
    height 22em
    left 0
    right 0
    top 0
    z-index 1
    bg('svg', 'footer-wave.svg')
    background-size 102% auto
    background-position top center

    +below('phone')
      height 7em
      background-size 107% auto

  &-wrapper
    wrapper()

  &-newsletter
    wrapper()
    z-index 5
    position relative
    padding-top 20em
    padding-bottom 20em
    display flex
    border-bottom 1px solid rgba(#ccc, .1)

    +below('phone')
      display block
      padding 0
      padding-bottom 5em

    &-column
      flex 1
      display flex
      align-items center

    &__title
      font-size 4rem
      color #fff
      font-weight bold
      line-height 1.5
      max-width 80%
      margin 0

      +below('phone')
        max-width 100%
        font-size 3rem
        line-height 1.6
        margin-bottom .5em

    &__form
      text-align center
      padding-top 2em
      width 100%

      &-wrapper
        display flex
        justify-content flex-end

        +below('phone')
          justify-content flex-start

    &__input
      width 300px
      background #fff
      border-radius $radius-size
      font-size 2rem
      color $color-text
      padding 1em
      border 0
      font-family $font-default
      outline 0
      font-weight bold
      border-top-right-radius 0
      border-bottom-right-radius @border-top-right-radius

      +below('phone')
        width 100%
        font-size 1.5rem

      &:focus
        box-shadow 0 0 30px rgba($color-text, .2)

      +placeholder()
        color #ddd

    &__submit
      @extends $button
      padding 1em 3em
      color #fff
      font-family $font-default
      border-top-left-radius 0
      border-bottom-left-radius @border-top-left-radius
      border 0
      background rgb(34,255,128)
      background-image linear-gradient(53deg, $color-secondary 0%, rgba(63,176,117,1) 100%)
      transition(box-shadow, .3s)

      &:hover
        box-shadow 0 0 30px rgba($color-text, .2)

      +below('phone')
        padding 1em 2em

  &-company
    display flex
    padding-top 3em

    +below('phone')
      flex-wrap wrap

    &-column
      &.institutional
        padding-top .3em
        padding-right 8em

        +below('phone')
          order 2
          width 100%
          margin-top 3em
          padding-top 3em
          border-top 1px solid rgba(#ccc, .1)

      &.partners-title
        padding-top .4em
        padding-right 2em

        +below('phone')
          order -1
          width 100%
          margin-bottom 1em
          padding-left .5em

      &.partners
        flex 1

        +below('phone')
          order 1
          width 100%

    &__logo
      display block
      width 160px
      height 40px
      text-decoration none
      bg('svg', 'logo-white.svg')
      background-size 99% auto
      text-indent -9999em

    &__address
      padding-top 1em
      color #ccc
      font-style normal
      font-size 1.2rem

  &-partners
    &-title
      padding .4em 0
      margin 0
      font-size 1.3rem
      font-weight normal
      color #fff
      text-transform uppercase
      letter-spacing .2em

    &-list
      list-reset()
      display flex

      +below('phone')
        flex-wrap wrap

    &-item
      display flex
      align-items center
      padding 0 1em
      flex 1

      +below('phone')
        flex 0
        width 50%
        margin 2em 0
        padding 0 1em 0 0

      a
        text-decoration none
        display block
        text-align left
        width 100%
        opacity .7
        transition(opacity)

        &:hover
          opacity 1

      img
        display inline-block
        max-width 150px
